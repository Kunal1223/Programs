//stack using without user input

#include<iostream>
using namespace std;
#define size 30

class Stack
{
private :
int top;
int arr[size];
int item;

public:

Stack()
{
top = 0;
}

void push(int n)
{
if(top==size)
cout<<"Overflow\n";

else
{

arr[top++]=n;

}
}

void pop()
{
if(top==0)
cout<<"Underflow\n";

else
{
top--;
